        @Html.DisplayFor(modelItem => item.PhotoUrl)
    </th>
    <th>
        @Html.DisplayFor(modelItem => item.Email)
    </th>
    <th>
        @Html.DisplayFor(modelItem => item.Telephone)
    </th>
